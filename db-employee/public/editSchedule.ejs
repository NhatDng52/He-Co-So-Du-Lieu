<!-- Edit Schedule Page (edit-schedule.ejs) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sửa ca làm</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        select {
            padding: 10px;
            margin-top: 5px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-top: 15px;
            font-weight: bold;
            color: #333;
        }

        input, textarea {
            padding: 10px;
            margin-top: 5px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            margin-top: 20px;
            padding: 10px 15px;
            font-size: 16px;
            background-color: #5eb9c7;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #5eb9c7;
        }

        .back-btn {
            display: inline-block;
            margin-top: 10px;
            text-align: center;
            color: #5eb9c7;
            text-decoration: none;
            font-weight: bold;
        }

        .back-btn:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Chỉnh sửa ca làm</h1>

        <!-- Show the error message if it exists -->
        <% if (errorMessage) { %>
            <div style="color: red; margin-bottom: 20px;">
                <strong><%= errorMessage %></strong>
            </div>
        <% } %>

        <form action="/schedule/update/<%= schedule.sched_id %>" method="POST">
            <div class="form-group">
                <label for="employeeid">Nhân viên</label>
                <select id="employeeid" name="employeeid" required>
                    <option value="">Chọn nhân viên</option>
                    <% employees.forEach(employee => { %>
                        <option value="<%= employee.id %>" <%= employee.id === schedule.id ? 'selected' : '' %>>
                            <%= employee.fname %>
                        </option>
                    <% }); %>
                </select>
            </div>
            
            <div class="form-group">
                <label for="date">Ngày làm</label>
                <input type="date" id="date" name="date" value="<%= schedule.start_date %>" required>
            </div>
            
            <div class="form-group">
                <label for="start">Giờ bắt đầu</label>
                <input type="time" id="start" name="start" value="<%= schedule.start_hour %>" required>
            </div>
            
            <div class="form-group">
                <label for="end">Giờ kết thúc</label>
                <input type="time" id="end" name="end" value="<%= schedule.end_hour %>" required>
            </div>
            
            <div class="form-group">
                <button type="submit" id="save-button">Lưu thông tin</button>
            </div>
            

            <script>
                document.getElementById('save-button').addEventListener('click', function(event) {
                    const startTime = document.getElementById('start').value;
                    const endTime = document.getElementById('end').value;
                    console.log(startTime);
                    console.log(endTime);
            
                    if (startTime && endTime && endTime <= startTime) {
                        event.preventDefault();
                        alert('Giờ kết thúc phải sau giờ bắt đầu!');
                    }
                });
            </script>
        </form>
        <a href="/schedule">Quay lại lịch làm việc</a>
    </div>
</body>
</html>
